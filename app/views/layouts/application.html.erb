<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= "Chulabook - Social Network" %></title>
   <!-- Javascripts
   ================================================== -->
   <%= javascript_include_tag :jquery %>
   <%= javascript_include_tag :bootstrap %>
   <!-- stylesheets
   ================================================== -->
   <%= stylesheet_link_tag    "application" %>
   <%= csrf_meta_tags %>

   <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      <![endif]-->
    </head>
    <body>
     <!-- Log In Modal -->
     <div class="modal hide fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Log in to Chulabook</h3>
      </div>
      <div class="modal-body">
        <%= render "/sessions/new.html.erb"%>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
    <!-- End of Log In Modal -->

    <!-- Sign Up Modal -->
    <div class="modal hide fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Create an Account</h3>
      </div>
      <div class="modal-body">
        <% @user = User.new %>
        <%= render "/users/new.html.erb"%>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
    <!-- End of Sign Up Modal -->


    <% if current_user %>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Chulabook &copy;</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="#">Home</a></li>
              <li><a href="#">Profile</a></li>
            </ul>

            <ul class="nav pull-right">
              <a href="/logout_user" class="btn btn-danger">Logout</a>
            </ul>
          </div><!-- /.nav-collapse -->
        </div><!-- container-->
      </div><!-- /navbar-inner -->
    </div><!-- /navbar -->
    <% else %>
    <div class="navbar navbar-fixed-top navbar-inverse">
     <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Chulabook &copy;</a>                    
        <div class="nav-collapse collapse">          
          <ul class="nav pull-right">
            <a href="#" id="loginclick" class="btn btn-success">Sign In</a>
          </ul>
        </div>
        <!-- /.nav-collapse -->
    </div><!-- container>
  </div><!-- /navbar-inner -->
</div><!-- /navbar -->

<% end %>

<% if current_user %>
<div class="container" style="margin-top:50px;">
  <div class="row">
   <div class="span3">
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header">Menu</li>
        <li class="divider"></li>
        <li><%= link_to "News Feed", ""  %></li>
        <li><%= link_to "Messages", ""  %></li>
        <li><%= link_to "Events", ""  %></li>
        <li><%= link_to "Photos", ""  %></li>
        <li class="divider"></li>
        <li><%= link_to "Groups", ""  %></li>
        <li><%= link_to "Pages", ""  %></li>
        <li><%= link_to "Apps", ""  %></li>
      </ul>
    </div><!--/.well -->
  </div><!--/span-->
  <div class="span9">
   <%= yield %>
 </div>
</div><!--/row-->

<footer>
  <p>&copy; Chulabook 2013   </p>
</footer>
</div> <!-- /container -->
<% else %>
<div class="container" style="margin-top:50px;">
  <div class="row">
    <div class="span12">
      <div class="hero-unit">
      <h1>Welcome to Chulabook</h1>
        <p><br />Chulabook is a social utility that connects people with friends in Chulalongkorn University, study and live around them. People use Chulabook to keep up with friends<br /><br /></p>
        <p>
          <a  href="#" class="btn btn-primary btn-large" id="signupclick">Join !</a>
        </p>
      </div>
      <%= yield %>
    </div>
  </div>
  <footer>
    <p>&copy; Chulabook 2013   </p>
  </footer>
</div> <!-- /container -->
<% end %>

</body>
<script>
 $('#loginclick').click(function(){
  $('#login').modal('show')
});
 $('#signupclick').click(function(){
  $('#signup').modal('show')
});
</script>
</html>
